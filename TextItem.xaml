<UserControl x:Class="Drop.TextItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Drop"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Height="100px" ToolTip="{Binding Path=Data}" Loaded="UserControl_Loaded_1">
    <Grid>
        <StackPanel>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Path=DisplayName}" VerticalAlignment="Top" FontSize="44" Foreground="White" FontWeight="Bold" Name="TextTitle"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Path=Data}" VerticalAlignment="Top" FontSize="20" Foreground="#FFDAD9D9" Name="TextFull"/>
    </StackPanel></Grid>
</UserControl>
